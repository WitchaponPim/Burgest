<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialogWidth"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/fab_margin"
    android:paddingTop="@dimen/fab_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin"
                android:text="Name"
                android:textSize="@dimen/textsize_H"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/proImg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/space"
                android:background="@color/colorBG"
                android:padding="@dimen/fab_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin"
                android:text="Vegetable" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin">

                <CheckBox
                    android:buttonTint="@color/colorPrimary"
                    android:id="@+id/c1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:checked="true"
                    android:text="Onion" />

                <CheckBox
                    android:buttonTint="@color/colorPrimary"
                    android:id="@+id/c2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:checked="true"
                    android:text="Lettus" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:paddingLeft="@dimen/fab_margin"
                android:paddingRight="@dimen/fab_margin">

                <CheckBox
                    android:id="@+id/c3"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:checked="true"
                    android:text="Tomato" />

                <CheckBox
                    android:buttonTint="@color/colorPrimary"
                    android:id="@+id/c4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:checked="true"
                    android:text="Cucumber" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space"
                        android:paddingLeft="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:text="Sauce" />

                    <RadioGroup
                        android:layout_marginLeft="@dimen/space"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RadioButton
                            android:id="@+id/r1"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="tomato sauce" />
                        <RadioButton
                            android:id="@+id/r2"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mayonnaise sauce" />
                        <RadioButton
                            android:id="@+id/r3"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="blackpaper sauce" />
                        <RadioButton
                            android:id="@+id/r4"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="thousand sauce" />
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space"
                        android:paddingLeft="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin"
                        android:text="Extra" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/fab_margin"
                        android:paddingRight="@dimen/fab_margin">

                        <CheckBox
                            android:id="@+id/ex1"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:text="Egg 10฿" />

                        <CheckBox
                            android:id="@+id/ex2"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight=".5"
                            android:text="Cheese 10฿" />
                        <CheckBox
                            android:id="@+id/ex3"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:buttonTint="@color/colorPrimary"
                            android:layout_weight=".5"
                            android:text="Bacon 10฿" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>






            <EditText
                android:id="@+id/comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:layout_marginTop="@dimen/space"
                android:ems="10"
                android:hint="Want more? Vegetable or Sauce?"
                android:paddingLeft="@dimen/fab_margin" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:paddingLeft="@dimen/space"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:text="Quantity"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:text="-"
                            android:id="@+id/del"
                            android:textStyle="bold"
                            android:textSize="@dimen/textsize_H"
                            android:theme="@style/Button"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                        <EditText
                            android:id="@+id/qty"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="1"
                            android:textSize="@dimen/textsize_H" />
                        <Button
                            android:text="+"
                            android:id="@+id/add"
                            android:textStyle="bold"
                            android:theme="@style/Button"
                            android:textSize="@dimen/textsize_H"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent" />
                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/fab_margin"

                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="100 ฿"
                            android:textSize="@dimen/textsize_XH" />

                        <TextView
                            android:id="@+id/extra"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="+ 30 ฿"
                            android:textSize="@dimen/textsize_XH" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/totalprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="1000000฿"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize_XH"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/space"
                android:paddingRight="@dimen/space">

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="OK" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

